#include<stdio.h>
int main()
{
    int a,b,s,o,d,r,w;
    printf("Enter 2 numbers : \n");
    scanf("%d %d",&a,&b);
    printf("Type 1 for summation \n");
    printf("Type 2 for difference \n");
    printf("Type 3 for product \n");
    printf("Type 4 for quotient \n");
    printf("choose the operation to be performed : ");
    scanf("%d",&s);
    o=a+b;
    d=a-b;
    r=a*b;
    w=a/b;
    (s=1) ? printf("summation = %d", o) : printf("invalid expression");
    (s=2) ? printf("difference = %d", d) : printf("invalid expression");
    (s=3) ? printf("product = %d", r) : printf("invalid expression");
    (s=4) ? printf("quotient = %d", w) : printf("invalid expression");
}
